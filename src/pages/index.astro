---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Viper's Melancholy">
	<!-- <link href="/src/pages/style.css" rel="stylesheet" type="text/css"> -->
	<main>
		<h1>Viper's Melancholy</h1>
		<p>
			Vipers's Melancholy is a clicker game where you click to upgrade the
			snake against enemies and bosses.
		</p>

		<form id="loggInn" action="/log_inn.php" method="post">
			<label for="Username">Username</label>
			<input id="Username" name="loggInn_username" type="text" />
			<label for="Password">Password</label>
			<input id="password" name="loggInn_password" type="password" />
			<button id="LogInn_button" type="submit">Login</button>
		</form>

		<form id="register" action="/register" method="post">
            <button id="RegisterButton" type="submit">Register</button>
        </form>

		<a href="game">To game</a>
	</main>
</Layout>
<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
</style>
